@import "./default"

* {
    font: "Hack Nerd Font Mono 18";
}

window {
    width: 300px;
}

mainbox {
    children: [ message, listview ];
}
    textbox {
        margin: 8 15 4 15;
    }

    listview {
        dynamic: false;
        margin: 0 8 4 8;
    }
        element {
            text-color: rgba(250, 250, 250, 0.9);
            border-radius: 10px;
            padding: 0 5px;
        }
        element active {
            background-color: rgba(50, 250, 50, 0.5);
        }
