[module/cpu]
type = custom/script
exec = ~/.local/systemhud/bin/cpu
click-left = kill -USR1 %pid%
tail = true

[module/acpi]
type = custom/script
exec = ~/.local/systemhud/bin/acpi
click-left = kill -USR1 %pid%
tail = true
format-font = 4

[module/bluetooth]
type = custom/script
exec = ~/.local/systemhud/bin/bluetooth
click-left = kill -USR1 %pid%
tail = true
format-font = 4

[module/audio]
type = custom/script
exec = ~/.local/systemhud/bin/pulseaudio
click-left = kill -USR1 %pid%
click-right = kill -USR2 %pid%
tail = True

[module/memory]
type = custom/script
exec = ~/.local/systemhud/bin/memory
click-left = kill -USR1 %pid%
tail = True

[module/clock]
type = custom/script
exec = ~/.local/systemhud/bin/clock
click-left = kill -USR1 %pid%
tail = True

; vim:ft=dosini
